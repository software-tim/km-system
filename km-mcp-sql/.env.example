# Azure SQL Server Connection
KM_SQL_SERVER=knowledge-base-sql-server.database.windows.net
KM_SQL_DATABASE=km-database
KM_SQL_USERNAME=your-username
KM_SQL_PASSWORD=your-password

# Alternative: Single connection string (optional)
# KM_SQL_CONNECTION_STRING=mssql+pyodbc://username:password@server/database?driver=ODBC+Driver+18+for+SQL+Server

# Security Settings
ALLOW_WRITE_OPERATIONS=false
ALLOW_INSERT_OPERATION=false
ALLOW_UPDATE_OPERATION=false
ALLOW_DELETE_OPERATION=false

# API Settings (optional)
# API_KEY=your-secret-api-key
ALLOWED_ORIGINS=*

# Performance Settings
QUERY_TIMEOUT=30000
MAX_ROWS=1000

# Application Settings
PORT=8000
DEBUG=false